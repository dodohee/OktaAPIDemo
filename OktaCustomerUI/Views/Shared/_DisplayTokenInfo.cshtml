@{
var tokenresponse = OktaCustomerUI.Helpers.LoginHelper.GetOIDCIntrospectionDetails();

    if (tokenresponse != null)
    {
        <div class="jumbotron" style="font-size: small">
            <p class="text-success" style="font-weight: bold;">OpenID Connect Information</p>
            <table>
                <tr>
                    <th>User Name</th>
                    <th>&nbsp;</th>
                    <th>Status</th>
                </tr>
                <tr>
                    <td>@tokenresponse.UserName</td>
                    <td>&nbsp;</td>
                    <td>@tokenresponse.Active</td>
                </tr>
                <tr>
                    <th>Issuer</th>
                </tr>
                <tr>
                    <td>@tokenresponse.ISS</td>
                </tr>
            </table>
        </div>
    }
}